{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "esnext",
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
